<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    >

    <TextView
        android:text="@string/Glossary_acty_hardware_and_software_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#cdcdcd"
        android:padding="15dp"
        >
    <TextView
        android:id="@+id/Glossary_acty_hardware_holder_models"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/base_87cd8f"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:text="@string/Glossary_acty_hardware_and_software_model"
        />
    <TextView
        android:id="@+id/Glossary_acty_hardware_and_software_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/base_87cd8f"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:text="@string/Glossary_acty_hardware_and_software_board"
        />
    </LinearLayout>
</LinearLayout>